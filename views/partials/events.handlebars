<section class="page" id="events">


	<nav class="subnav">
		<div class="content">

			<h1>List of Events</h1>

		    <ul>
				<li><a href="#/nearby-events" class="route">Nearby</a></li>
                <li><a href="#/upcoming-events" class="route">Upcoming</a></li>
				<li><a href="#/add-new-event"  class="route">Add New Event</a></li>
		    </ul>
		</div>
	</nav>

	<section id="nearbyEvents" class="view">
	{{#each event}}
		<article>
			<h3><a href="#" target="_blank">{{ this.name }}</a></h3>
			<p class="link"><a href="<%= websiteLink %>">{{ this.websiteLink }}</a></p>
			<p class="date"><%= OpenPath.utils.convertTimeStampToDate(date) %></p>
			<p class="location"><%= location.formatted_address %></p>
			<p><%= description %></p>
			<div class="buttons">
				<% if(creator === OpenPath.email) { %>
					<button class="btn" id="edit">Edit</button>
					<button class="btn btn-primary" id="invite">Invite</button>
				<% }else{ %>
				<% } %>
					<button class="btn btn-primary" id="join">Join</button>
				
			</div>
		</article>
		<div class="mapWrap"></div>
	{{/each}}
	</section>
</section>