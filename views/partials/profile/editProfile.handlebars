<section id="editProfile" class="view">
	<div class="content">

	</div>
</section>

<!-- events front end template (remember \{{ }} ) -->
<script id="EditProfileTemplate" type="text/x-handlebars-template">
	 
	\{{#if name}}

	\{{else}}
		<div class="profileIntro">
			<p><strong>Welcome to Open Path!</strong></p>
			<p><strong>To get recommendations based on your interests, simply fill in something about yourself:</strong></p>	
		</div>
	\{{/if}}

	<form action="/profile" method="post">
		<header class="name">
			<div class="userIcon">
				<fieldset>
					<input type="file" name="userIcon" />
				</fieldset>
			</div>
			<fieldset class="name">
				<input type="text" name="firstName" class="firstName" placeholder="first name" value="\{{firstName}}" />
				<input type="text" name="lastName" class="lastName" placeholder="last name" value="\{{lastName}}" />
			</fieldset>
		</header>
		<fieldset>
			<label>Grade Level:</label>
			<select name="gradelevel" class="gradelevel">
				<option value="Pre-K to Grade 2">Pre-K to Grade 2</option>
				<option value="Grade 3-5">Grade 3-5</option>
				<option value="Grade 9-12">Grade 9-12</option>
				<option value="Post Secondary">Post Secondary</option>
				<option value="Adults">Adults</option>
				<option value="Families">Families</option>
			</select>
		</fieldset>
		<fieldset>
			<label>Interests:</label>
			<input type="text" class="interests" name="interests" value="\{{interests}}" />
		</fieldset>
		<fieldset>
			<label>List of Co-Learners:</label>
			<input type="text" class="colearners" name="colearners" value="\{{colearners}}" />
		</fieldset>
		
		<p class="required"><small><em>*Required</em></small></p>
		<fieldset class="done">
			<button type="submit" class="btn btn-primary">Done</button>
		</fieldset>
	</form>
</script>
